   ],
   "source": [
    "import pandas as pd\n",
    "\n",
    "perf = pd.read_csv(\"performance_2022_2023.csv\")\n",
    "sal = pd.read_csv(\"salaries.csv\")\n",
    "\n",
    "perf.columns = perf.columns.str.strip().str.lower()\n",
    "if \"player\" in perf.columns:\n",
    "    perf[\"player\"] = perf[\"player\"].str.strip().str.lower()\n",
    "\n",
    "sal = sal.rename(columns=lambda x: x.strip())\n",
    "sal_long = sal.melt(\n",
    "    id_vars=[\"Player Id\", \"Player Name\"],\n",
    "    var_name=\"season\",\n",
    "    value_name=\"salary\"\n",
    ")\n",
    "sal_long[\"player\"] = sal_long[\"Player Name\"].astype(str).str.strip().str.lower()\n",
    "sal_long[\"salary\"] = (\n",
    "    sal_long[\"salary\"]\n",
    "    .astype(str)\n",
    "    .str.replace(\"[$,]\", \"\", regex=True)\n",
    "    .replace(\"\", None)\n",
    "    .astype(float)\n",
    ")\n",
    "\n",
    "sal_2023 = sal_long[sal_long[\"season\"] == \"2022/2023\"]\n",
    "merged = pd.merge(perf, sal_2023[[\"player\", \"salary\"]], how=\"left\", on=\"player\")\n",
    "\n",
    "output_path = \"merged_salary_stats.csv\"\n",
    "merged.to_csv(output_path, index=False)\n",
    "print(output_path)\n"
   ]
  },
